<%= form_for([@reader, @bookshelf, @book]) do |form| %>
<% if @bookshelf.errors.any? %>
<div id="error_explanation">
   <h2><%= pluralize(@bookshelf.errors.count, "error")%>prohibited this bookshelf from being saved:</h2>
   <ul>
      <% @bookshelf.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
   </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :Title %>
  <%= form.text_field :title %>
</div>

<div class="field">
  <%= form.label :Firstname %>
  <%= form.text_field :author_firstname %>
</div>

<div class="field">
  <%= form.label :Lastname %>
  <%= form.text_field :author_lastname %>
</div>

<div class="field">
  <%= form.label :Year %>
  <%= form.text_field :year %>
</div>

<div class="field">
  <%= form.label :Genre %>
  <%= form.text_field :genre %>
</div>

<div class="actions"><%= form.submit %></div>
<% end %>
