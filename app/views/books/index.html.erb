<h1>Books for <%= @bookshelf.shelf_name %></h1>
<table>
   <tr>
      <th>Books</th>
   </tr>
   <% for book in @books %>
   <tr>
      <td><%= book.title %></td>
      <td><%= link_to 'Show', reader_bookshelf_book(@reader, @bookshelf, @book)%></td>
      <td><%= link_to 'Edit', edit_reader_bookshelf_book(@reader, bookshelf, book)%></td>
      <td><%= link_to 'Delete', reader_bookshelf_path(@reader, bookshelf), :confirm => 'Are you sure?', :method => :delete %></td>
   </tr>
   <% end %>
</table>
<br />
<%= link_to 'New Book', new_reader_bookshelf_book_path(@reader) %> |
<%= link_to 'Back to Bookshelf', reader_bookshelves_path(@reader) %>
