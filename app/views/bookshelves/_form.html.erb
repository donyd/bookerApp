<%= form_for([@reader, @bookshelf]) do |f| %>
<% if @bookshelf.errors.any? %>
<div id="error_explanation">
   <h2><%= pluralize(@bookshelf.errors.count, "error")%>prohibited this bookshelf from being saved:</h2>
   <ul>
      <% @bookshelf.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
   </ul>
</div>
<% end %>
<div class="field">
   <p><%= f.label :Shelf %><br /><%= f.text_field :shelf_name %></p>
</div>
<div class="actions"><%= f.submit %></div>
<% end %>
